      {
        "id": 3,
        "title": "ðŸŽ¯ Panel 3: Pod Start Time Monitoring",
        "type": "table",
        "targets": [
          {
            "datasource": {
              "type": "prometheus",
              "uid": "PBFA97CFB590B2093"
            },
            "editorMode": "code",
            "expr": "time() - process_start_time_seconds{job=~\"postgres-exporter.*\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": false
              },
              "indexByName": {},
              "renameByName": {
                "Value": "uptime_seconds",
                "instance": "pod_id",
                "job": "service"
              }
            }
          },
          {
            "id": "calculateField",
            "options": {
              "alias": "start_time",
              "binary": {
                "left": "now",
                "operator": "-",
                "reducer": "sum",
                "right": "uptime_seconds"
              },
              "mode": "binary",
              "reduce": {
                "reducer": "sum"
              }
            }
          },
          {
            "id": "calculateField", 
            "options": {
              "alias": "status",
              "binary": {
                "left": "uptime_seconds",
                "operator": "<",
                "reducer": "sum",
                "right": "300"
              },
              "mode": "binary",
              "reduce": {
                "reducer": "sum"
              }
            }
          }
        ],
        "options": {
          "showHeader": true
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto", 
              "inspect": false
            },
            "mappings": [
              {
                "options": {
                  "1": {
                    "text": "RECENT_RESTART"
                  },
                  "0": {
                    "text": "STABLE"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "status"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                }
              ]
            }
          ]
        }
      },
